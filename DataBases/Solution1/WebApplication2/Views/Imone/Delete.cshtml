@model WebApplication2.Models.Imone
@{
	ViewData["title"] = "Įmonės šalinimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">Ar tikrai norite šalinti šį darbuotoją?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Title)</dt>
			<dd>@Html.DisplayFor(m => m.Title)</dd>

			<dt>@Html.DisplayNameFor(m => m.City)</dt>
			<dd>@Html.DisplayFor(m => m.City)</dd>

			<dt>@Html.DisplayNameFor(m => m.Address)</dt>
			<dd>@Html.DisplayFor(m => m.Address)</dd>

			<dt>@Html.DisplayNameFor(m => m.Phone)</dt>
			<dd>@Html.DisplayFor(m => m.Phone)</dd>

			<dt>@Html.DisplayNameFor(m => m.NumberOfEmployees)</dt>
			<dd>@Html.DisplayFor(m => m.NumberOfEmployees)</dd>

			<dt>@Html.DisplayNameFor(m => m.Id)</dt>
			<dd>@Html.DisplayFor(m => m.Id)</dd>
		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> Šios darbuotojo esybės trinti negalima, nes 
				ji turi ryšių į priklausomas esybes.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Id})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>