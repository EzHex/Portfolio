@model WebApplication2.Models.Specifikacija
@{
	ViewData["title"] = "Specifikacijos sukūrimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	
	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.Id, new { @class = "control-label" })
			@Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
			@Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.ItemId, new { @class = "control-label" })
			@*@Html.EditorFor(m => m.ItemId, new { htmlAttributes = new { @class = "form-control" } })*@
			@Html.DropDownListFor(m=> m.ItemId, Model.Lists.Items, "---", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.ItemId, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Feature, new { @class = "control-label" })
			@Html.EditorFor(m => m.Feature, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Feature, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Value, new { @class = "control-label" })
			@Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>