@model IEnumerable<WebApplication2.Models.Uzsakymas>
@{
	ViewData["title"] = "Užsakymai";
}


<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Create")" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Sukurti naują</a>
	</span>
</div>

<div class="d-flex justify-content-center">
	<table class="entitylist table table-striped table-hover">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Number)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Date)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Status)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.WorkerId)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.BuyerId)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(model => item.Number)
				</td>
				<td>
					@Html.DisplayFor(model => item.Date)
				</td>
				<td>
					@Html.DisplayFor(model => item.Status)
				</td>
				<td>
					@Html.DisplayFor(model => item.WorkerId)
				</td>
				<td>
					@Html.DisplayFor(model => item.BuyerId)
				</td>
				<td>
					<a href="@Url.Action("Edit", new { id = item.Number })" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Redaguoti</a>
					<a href="@Url.Action("Delete", new { id = item.Number })" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Šalinti</a>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>
