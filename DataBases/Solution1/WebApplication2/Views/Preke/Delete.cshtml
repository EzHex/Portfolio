@model WebApplication2.Models.Preke
@{
	ViewData["title"] = "Prekės šalinimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm()) 
{
	@Html.AntiForgeryToken()

	<fieldset class="border rounded shadow p-2">
		<legend class="text-center">Ar tikrai norite šalinti šią prekę?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.Code)</dt>
			<dd>@Html.DisplayFor(m => m.Code)</dd>

			<dt>@Html.DisplayNameFor(m => m.Title)</dt>
			<dd>@Html.DisplayFor(m => m.Title)</dd>

			<dt>@Html.DisplayNameFor(m => m.Price)</dt>
			<dd>@Html.DisplayFor(m => m.Price)</dd>			

			<dt>@Html.DisplayNameFor(m => m.Count)</dt>
			<dd>@Html.DisplayFor(m => m.Count)</dd>	

			<dt>@Html.DisplayNameFor(m => m.Manufacturer)</dt>
			<dd>@Html.DisplayFor(m => m.Manufacturer)</dd>	

			<dt>@Html.DisplayNameFor(m => m.Distributor)</dt>
			<dd>@Html.DisplayFor(m => m.Distributor)</dd>	,

			<dt>@Html.DisplayNameFor(m => m.Type)</dt>
			<dd>@Html.DisplayFor(m => m.Type)</dd>	
		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="alert alert-warning text-center">
				<i class="fa-solid fa-circle-exclamation"></i> Šios prekės pašalinti negalima.
			</div>
		}
		else
		{
			<div class="container-fluid d-flex d-row justify-content-end">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.Code})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Šalinti</button>
			</div>			
		}
	</fieldset>
}
</div>


<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>